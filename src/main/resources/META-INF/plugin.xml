<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>de.uni_passau.fim.se2.intelligame</id>
    <name>IntelliGame</name>
    <vendor>philippstraubinger</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="de.uni_passau.fim.se2.intelligame.services.MyApplicationService"/>
        <projectService serviceImplementation="de.uni_passau.fim.se2.intelligame.services.ProjectService"/>
        <notificationGroup id="Custom Notification Group" displayType="BALLOON"/>
    </extensions>

    <applicationListeners>
        <listener class="de.uni_passau.fim.se2.intelligame.listeners.ProjectManagerImpl"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <projectListeners>
        <listener class="de.uni_passau.fim.se2.intelligame.listeners.TestListener" topic="com.intellij.execution.testframework.sm.runner.SMTRunnerEventsListener"/>
    </projectListeners>
    <actions>
        <action id="de.uni_passau.fim.se2.intelligame.actions.OpenInformationDialogAction"
                class="de.uni_passau.fim.se2.intelligame.actions.OpenInformationDialogAction"
                text="Show Achievement Progress" description="Opens the dialog with all achievements ">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
